<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OpenAICommunicator.ViewModels"
        xmlns:models="using:OpenAICommunicator.Models"
        xmlns:local="using:OpenAICommunicator.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="OpenAICommunicator.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="OpenAI Chat"
        Width="1000" Height="700"
        MinWidth="500" MinHeight="400">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Border.user-message">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="MaxWidth" Value="500"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="60,4,16,4"/>
        </Style>
        <Style Selector="Border.user-message SelectableTextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style Selector="Border.assistant-message">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="MaxWidth" Value="500"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="16,4,60,4"/>
        </Style>
        <Style Selector="Border.assistant-message SelectableTextBlock">
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style Selector="ListBox">
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,1"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid ColumnDefinitions="Auto,*">
            
            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Width="260"
                    IsVisible="{Binding ShowSidebar}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,1,0">
                <Grid RowDefinitions="Auto,*">
                    
                    <!-- New Chat Button -->
                    <Button Grid.Row="0" Command="{Binding NewChatCommand}"
                            Margin="12" Padding="12,10" CornerRadius="8"
                            HorizontalAlignment="Stretch">
                        <TextBlock Text="+ New Chat" FontWeight="SemiBold"/>
                    </Button>
                    
                    <!-- Conversation List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox ItemsSource="{Binding Conversations}" 
                                 SelectedItem="{Binding CurrentConversation}"
                                 Margin="4,0"
                                 Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="models:Conversation">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0" Text="{Binding Title}" 
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" 
                                                Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DeleteConversationCommand}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                Padding="6,2"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="×" Foreground="#999" FontSize="16"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Main Chat Area -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto">
                
                <!-- Header -->
                <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,0,1" Padding="12,10">
                    <Grid ColumnDefinitions="Auto,Auto,*,Auto">
                        <Button Grid.Column="0" Command="{Binding ToggleSidebarCommand}"
                                Background="Transparent" Padding="8" Margin="0,0,8,0">
                            <TextBlock Text="☰" FontSize="16"/>
                        </Button>
                        
                        <ComboBox Grid.Column="1" ItemsSource="{Binding AvailableModels}" 
                                  SelectedItem="{Binding SelectedModel}"
                                  MinWidth="150" VerticalAlignment="Center"/>
                        
                        <!-- Current model indicator -->
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding SelectedModel, StringFormat='Using: {0}'}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   FontSize="12"/>
                        
                        <!-- Settings Cog -->
                        <Button Grid.Column="3" Command="{Binding ToggleSettingsCommand}"
                                Background="Transparent" Padding="10" Margin="8,0,0,0">
                            <TextBlock Text="⚙" FontSize="18"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Messages Area -->
                <ScrollViewer x:Name="MessagesScroller" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Empty state -->
                        <TextBlock Text="Start a conversation..."
                                   IsVisible="{Binding !Messages.Count}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,100,0,0"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   FontSize="16"/>
                        
                        <ItemsControl ItemsSource="{Binding Messages}" Margin="0,8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:ChatMessage">
                                    <Border Classes.user-message="{Binding IsUser}"
                                            Classes.assistant-message="{Binding IsAssistant}">
                                        <SelectableTextBlock Text="{Binding Content}" TextWrapping="Wrap"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- Error Message -->
                <Border Grid.Row="1" Background="#D32F2F" Padding="12" Margin="16"
                        CornerRadius="8" VerticalAlignment="Bottom"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="White" TextWrapping="Wrap"/>
                </Border>

                <!-- Loading indicator -->
                <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" CornerRadius="16" Padding="16,8"
                        HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        Margin="16,0,0,8"
                        IsVisible="{Binding IsSending}">
                    <TextBlock Text="Thinking..." Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </Border>

                <!-- Input Area -->
                <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,1,0,0" Padding="16">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Text="{Binding MessageInput}"
                                 Watermark="Type your message..."
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MaxHeight="120"
                                 MinHeight="40"
                                 CornerRadius="20"
                                 Padding="16,10"
                                 KeyDown="InputBox_KeyDown"/>
                        
                        <Button Grid.Column="1" 
                                Command="{Binding SendMessageCommand}"
                                IsEnabled="{Binding CanSend}"
                                Margin="8,0,0,0"
                                Padding="16,10"
                                CornerRadius="20"
                                VerticalAlignment="Bottom"
                                Content="Send"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Settings Overlay -->
        <Grid IsVisible="{Binding ShowSettings}" Background="#80000000">
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    CornerRadius="12"
                    Padding="24"
                    MinWidth="350"
                    MaxWidth="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Spacing="16">
                    <TextBlock Text="Settings" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    
                    <!-- API Key -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="OpenAI API Key"/>
                        <TextBox Text="{Binding ApiKey}" 
                                 Watermark="sk-..."
                                 PasswordChar="●"/>
                        <TextBlock Text="Stored securely in Windows Credential Manager"
                                   FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    
                    <!-- Theme Toggle -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Theme"/>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Dark" 
                                    Click="DarkTheme_Click"
                                    Padding="16,8"/>
                            <Button Content="Light"
                                    Click="LightTheme_Click"
                                    Padding="16,8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Save Button -->
                    <Button Content="Save &amp; Close" 
                            Command="{Binding SaveSettingsCommand}"
                            HorizontalAlignment="Center"
                            Padding="24,10"
                            Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
